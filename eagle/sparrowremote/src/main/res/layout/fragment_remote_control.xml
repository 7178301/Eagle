<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ssil.swin.com.sparrowremote.Fragment.RemoteControlFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/longitude"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal" />

        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/editTextLongitude"
            android:inputType="text"
            android:enabled="false"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_width="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/latitude"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal" />

        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/editTextLatitude"
            android:inputType="text"
            android:enabled="false"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/altitude"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal" />

        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/editTextAltitude"
            android:inputType="text"
            android:enabled="false"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bearing"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextBearing"
            android:inputType="text"
            android:enabled="false"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disconnect"
            android:id="@+id/buttonDisconnect"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left"
            android:id="@+id/buttonLeft"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            android:id="@+id/buttonConnect"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forward"
            android:id="@+id/buttonForward"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backward"
            android:id="@+id/buttonBackward"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/right"
            android:id="@+id/buttonRight"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal" />

        <Space
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1" />

        <Space
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1" />

        <Space
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rotate_left"
            android:id="@+id/buttonRotateLeft"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rotate_right"
            android:id="@+id/buttonRotateRight"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/up"
            android:id="@+id/buttonUp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gohome"
            android:id="@+id/buttonGoHome"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/down"
            android:id="@+id/buttonDown"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal" />

    </GridLayout>

</LinearLayout>
